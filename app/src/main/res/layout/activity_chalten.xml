<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:scaleType="fitXY"
            android:src="@drawable/laguna_capri" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="EL CHALTEN"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="132dp"
            android:background="@color/colorPrimary"
            android:id="@+id/linearLayout2">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                android:onClick="back"
                android:clickable="true"/>

            <Button
                android:id="@+id/imageView12"
                android:background="@drawable/ic_search_white_24dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/imageView10"
                android:background="@drawable/ruta"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/imageView11"
                android:background="@drawable/ic_filter_hdr_white_24dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/imageView8"
                android:background="@drawable/ic_favorite_border_white_24dp"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <TextView
            android:layout_width="360dp"
            android:layout_height="352dp"
            android:layout_margin="10dp"
            android:text="@string/chalten"
            tools:layout_editor_absoluteY="182dp"
            tools:layout_editor_absoluteX="16dp"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:id="@+id/textView2" />
    </LinearLayout>
</RelativeLayout>